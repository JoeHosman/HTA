@model HTA.Website.MVC.Example.Models.AdventureLocationModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/chosen.jquery.js")" type="text/javascript"></script>
<link href="/Content/chosen.css" rel="stylesheet" type="text/css" />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>AdventureLocationModel</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Name)
            @Html.ValidationMessageFor(model => model.Location.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Address)
            @Html.ValidationMessageFor(model => model.Location.Address)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Picture)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Picture)
            @Html.ValidationMessageFor(model => model.Location.Picture)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Point.Lat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Point.Lat)
            @Html.ValidationMessageFor(model => model.Location.Point.Lat)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Point.Lon)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Point.Lon)
            @Html.ValidationMessageFor(model => model.Location.Point.Lon)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Region)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Location.Region.Id, Model.SelectableAdventureRegions.Select(s => new SelectListItem { Text = s.Name, Value = s.Id }), new { id = "selectAdventureRegion", Class = "chzn-select" })
        </div>
        <p>
            @Html.HiddenFor(model => model.Location.Id)
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    $(".chzn-select").chosen();

    //        $(".chzn-select-deselect").chosen({ allow_single_deselect: true });
</script>
