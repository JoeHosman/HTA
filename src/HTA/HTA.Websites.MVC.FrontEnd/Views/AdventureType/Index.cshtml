@model IEnumerable<HTA.Adventures.Models.Types.AdventureType>
@{
    ViewBag.Title = "Adventure Type Index";
}
<section id="content">
<div class="row">
    <div class="span8" >
    <div class="span7">
        <h2>
        Adventure Type Index</h2>
        <p>
        @Html.ActionLink("Create a New Adventure Type", "Create")
        </p>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Id
                </th>
                <th>
                    Description
                </th>
                <th>
                    Icon
                </th>
                <th>
                    Photo
                </th>
                <th>
                    Templates
                </th>
                <th>
                </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink(item.Id, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (!String.IsNullOrEmpty(item.IconLink))
                {
                    <img src=@item.IconLink />
                }
            </td>
            <td>
                @if (!String.IsNullOrEmpty(item.PhotoLink))
                {
                    <img src=@item.PhotoLink />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCardTemplates.Count)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
            </div>
        </div>
        @Html.Partial("_RightBar")
    </div>
    <div class="clear"></div>
</section>